<div class="container">
  <div class="row">
    <div class="col-12">
      <h3><b>Bienvenido, <%= current_user.email %></b></h3>
    </div>    
  </div>
  <div class="row">
    <div class="mpanel">
      <div class="row title">
        <h3>Acciones frecuentes</h3>      
      </div>
      <div class="row info">
        <table class="table">
          <tr>
            <td class="col-6">
              <a href="<%= new_user_dimension_url(current_user) %>" class="btn btn-block btn-lg btn-custom">Crear nueva variable</a>
            </td>
            <td>
              <% if @dashboard.dimensions > 0 %>
                <a href="<%= new_user_measurement_url(current_user) %>" class="btn btn-block btn-lg btn-custom">Realizar nueva medici√≥n</a>              
              <% end %>
            </td>
          </tr>
        </table>         
      </div>
    </div>
  </div>
  <div class="row">
    <div class="mpanel">
      <div class="row title">
        <h3>Resumen</h3>      
      </div>    
      <div class="row info text-center">
        <table class="table">
          <tr>
            <td>
              <h4 class="text-muted">Has creado</h4><h2><%= number_with_delimiter(@dashboard.dimensions, :delimiter => ".") %></h2><h4 class="text-muted"><%= h text_dimensions(@dashboard.dimensions) %></h4>
            </td>
            <td>
              <h4 class="text-muted">Has realizado</h4><h2><%= number_with_delimiter(@dashboard.measurements, :delimiter => ".") %></h2><h4 class="text-muted"><%= h text_measurements(@dashboard.measurements) %></h4>
            </td>
            <td>
              <h4 class="text-muted">Has generado</h4><h2><%= number_with_delimiter(@dashboard.charts, :delimiter => ".") %></h2><h4 class="text-muted"><%= h text_charts(@dashboard.charts) %></h4>
            </td>
          </tr>
        </table>          
      </div>
    </div>
  </div>
  <% unless @dashboard.events.blank? %>
    <div class="row">
      <div class="mpanel">
        <div class="row title">
          <h3>Actividad reciente</h3>      
        </div>    
        <div class="row info">          
          <table class="table table-condensed">   
            <% @dashboard.events.each do |e| %>         
              <tr>
                <td class="col-1"><%= l e.created_at, :format => :date %></td>
                <td class="col-1"><%= l e.created_at, :format => :time %></td>
                <td class="text-muted"><%= h event_text(e) %></td>
              </tr>
            <% end %>              
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>  
