      <div class="clearfix">
        <% @dashboard.recent_dimensions.each do |rd| %>          
          <h4><%= rd[:name] %></h4>
        <% end %>
      </div>
      <div class="clearfix">
        <div class="pagination">
          <ul>
            <li><a href="#">Prev</a></li>
