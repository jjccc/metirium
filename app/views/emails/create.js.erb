<% if @email.errors.any? %>
  <% if @email.errors.keys.any?{ |x| x == :addresses } %>
    $("#<%= @email.prefix %>addresses-group").addClass("has-error");
    $("#<%= @email.prefix %>addresses-error").html('<%= @email.errors[@email.errors.keys.select{ |x| x == :addresses }.first] * "<br>" %>').removeClass("hidden");
  <% end %>
  <% if @email.errors.keys.any?{ |x| x == :subject } %>
    $("#<%= @email.prefix %>subject-group").addClass("has-error");
    $("#<%= @email.prefix %>subject-error").html('<%= @email.errors[@email.errors.keys.select{ |x| x == :subject }.first] * "<br>" %>').removeClass("hidden");
  <% end %>
  <% if @email.errors.keys.any?{ |x| x == :deliver } %>
    $("#<%= @email.prefix %>deliver-error").html('<%= @email.errors[@email.errors.keys.select{ |x| x == :deliver }.first] * "<br>" %>').removeClass("hidden");
  <% end %>
<% else %>
  <% if @email.is_contact %>
    $("#contact-dialog").modal("hide");
  <% else %>
    $("#send-mail-dialog").modal("hide");
  <% end %>
<% end %>
